generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id      Int      @id @default(autoincrement())
  name    String  
  country String
}


model Team {
  id       Int  @id @default(autoincrement())
  name     String
  team     TeamStats @relation(fields: [teamId], references: [id],onDelete: Cascade)
  teamId   Int @unique
}

model TeamStats {
  id           Int    @id @default(autoincrement())
  teams        Team[]
  totalMatches Int
  matchesWon   Int
  matchesLost  Int
}

